import random
import string
import secrets

lower_case = string.ascii_lowercase
upper_case = string.ascii_uppercase
digits = string.digits
ponctuation = string.punctuation

def Generator(lenght = 12, use_lower_case = True, use_upper_case = True, use_digits = True, use_ponctuation = True):
    caractere = ""
    if use_lower_case:
        caractere += lower_case
    if use_upper_case :
        caractere += upper_case
    if use_digits:
        caractere += digits
    if use_ponctuation:
        caractere += ponctuation
    password = ''.join(random.choice(caractere) for _ in range(lenght))
    return password

def main():
    print("Mot de passe simple:", Generator())
    print("Mot de passe complex:", Generator(16))
    print("Mot de passe numerique:", Generator(use_lower_case=False, use_upper_case= False, use_ponctuation= False))

main()
